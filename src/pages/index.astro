// APIからSNSのユーザーID取得するところ。ピポピポ。
import {SHEET_API_KEY, SHEET_ID} from '../server-constants'
const response = await fetch(`https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/Socials!F2:F2/?key=${SHEET_API_KEY}`);
