---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

  <a class="read-more-link absolute top-0 left-0 w-[100%] h-[100%]" href={getPostLink(post.Slug)}></a>

<style>
  .read-more-link {
    color: var(--fg);
  }
  .read-more-link a {
    color: rgb(59, 130, 246);
    font-size: 1rem;
    font-weight: 500;
    line-height: 2rem;
    text-decoration: underline;
  }
  @media (max-width: 768px) {
    .read-more-link a {
      width: 50%;
    }
  }
</style>
